<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/second_tv_res"
        android:layout_width="237dp"
        android:layout_height="58dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Enter Your Name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/main_et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Name"
        android:inputType="text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/second_tv_res"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/second_tv_res"
        app:layout_constraintTop_toBottomOf="@+id/second_tv_res" />

    <Button
        android:id="@+id/main_btn_share"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:layout_marginTop="192dp"
        android:text="Generate"
        app:layout_constraintEnd_toEndOf="@+id/main_et_name"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/main_et_name"
        app:layout_constraintTop_toBottomOf="@+id/main_et_name" />
</androidx.constraintlayout.widget.ConstraintLayout>